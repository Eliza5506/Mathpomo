<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Привет, я твой помощник"
        android:textSize="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kl"
        android:onClick="calc"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="50dp"
android:textColor="@color/colorPrimaryDark"
        android:text="Калькулятор" />
    <Button
        android:id="@+id/сс"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Системы счисления" />
    <Button
        android:id="@+id/nr"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Решение неравенств" />
    <Button
        android:id="@+id/ur"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Решение уравнений" />
    <Button
        android:id="@+id/kv"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Решение квадратных уравнений" />
    <Button
        android:id="@+id/fo"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Математические формулы" />



</LinearLayout>