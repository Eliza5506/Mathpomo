<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Признаки делимости натуральных чисел:"
    android:textSize="20dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 2: последняя цифра числа чётная"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 3: сумма цифр числа делится на 3"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 4: две последние цифры числа нули или образуют число, делящееся на 4"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 5: последняя цифра числа 0 или 5"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 6: число должно делится одновременно на 2 и на 3"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 7: разность между суммой его цифр, стоящих на чётных местах и суммой цифр, стоящих на нечётных местах делится на 7"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 8: три последние цифры числа нули или образуют число, делящееся на 8"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 9: сумма цифр числа делится на 9"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 10: последняя цифра числа 0"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 11: разность между суммой его цифр, стоящих на чётных местах и суммой цифр, стоящих на нечётных местах делится на 11"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 12: число должно делится одновременно на 3 и на 4"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 13: разность между суммой его цифр, стоящих на чётных местах и суммой цифр, стоящих на нечётных местах делится на 13"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На 25: две последние цифры числа 00, 25, 50 или 75"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        />
</LinearLayout>